# Example environment variables for Kongtze Backend
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git!

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/kongtze

# Security Configuration
JWT_SECRET_KEY=your-secure-random-secret-key-here-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
